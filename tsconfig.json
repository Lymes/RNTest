{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "assets": ["./assets/*"],
      "tests": ["./tests/*"],
      "~contexts/*": ["./src/contexts/*"],
      "~routes/*": ["./src/routes/*"],
      "~screens/*": ["./src/screens/*"],
      "~services/*": ["./src/services/*"],
      "~hooks/*": ["./src/hooks/*"],
      "~components/*": ["./src/components/*"],
      "~navigation/*": ["./src/navigation/*"],
      "~i18n/*": ["./src/i18n/*"],
    },
  }
}